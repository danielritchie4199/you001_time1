{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "normalizer": {
        "lowercase_norm": {
          "type": "custom",
          "char_filter": [],
          "filter": ["lowercase"]
        }
      },
      "analyzer": {
        "korean_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "nori_part_of_speech",
            "nori_number",
            "nori_readingform",
            "lowercase"
          ]
        },
        "korean_synonym_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "nori_part_of_speech",
            "nori_number", 
            "nori_readingform",
            "lowercase",
            "korean_synonyms"
          ]
        },
        "search_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "nori_part_of_speech",
            "nori_number",
            "nori_readingform", 
            "lowercase",
            "korean_synonyms"
          ]
        }
      },
      "tokenizer": {
        "nori_tokenizer": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed",
          "discard_punctuation": true,
          "user_dictionary_rules": []
        }
      },
      "filter": {
        "nori_part_of_speech": {
          "type": "nori_part_of_speech",
          "stoptags": [
            "E", "IC", "J", "MAG", "MAJ", "MM", "SP", "SSC", "SSO", "SC", "SE",
            "XPN", "XSA", "XSN", "XSV", "UNA", "NA", "VSV"
          ]
        },
        "nori_number": {
          "type": "nori_number"
        },
        "nori_readingform": {
          "type": "nori_readingform"
        },
